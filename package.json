{
  "name": "mdrrmo-dashboard",
  "version": "0.1.0",
  "private": true,
  "description": "MDRRMO Pio Duran Dashboard - Full Stack Application",
  "scripts": {
    "install": "yarn install:frontend && yarn install:backend",
    "install:frontend": "cd frontend && yarn install",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "start": "echo 'Use supervisor to start services: sudo supervisorctl restart all'",
    "start:frontend": "cd frontend && yarn start",
    "start:backend": "cd backend && uvicorn server:app --host 0.0.0.0 --port 8001 --reload",
    "build": "yarn build:frontend",
    "build:frontend": "cd frontend && yarn build",
    "test": "yarn test:frontend",
    "test:frontend": "cd frontend && yarn test",
    "restart": "sudo supervisorctl restart all",
    "restart:frontend": "sudo supervisorctl restart frontend",
    "restart:backend": "sudo supervisorctl restart backend",
    "status": "sudo supervisorctl status",
    "logs:frontend": "tail -f /var/log/supervisor/frontend.out.log",
    "logs:backend": "tail -f /var/log/supervisor/backend.out.log",
    "logs:backend-error": "tail -f /var/log/supervisor/backend.err.log",
    "sync": "curl -X POST http://localhost:8001/api/sync/all",
    "health": "curl http://localhost:8001/api/health"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pioxmdr920415/pioduran-dashboard.git"
  },
  "author": "MDRRMO Pio Duran",
  "license": "MIT",
  "workspaces": [
    "frontend"
  ],
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0",
    "python": ">=3.11.0"
  }
}
